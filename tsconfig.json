{
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
           "emojione": ["lib/emojione/lib/js/emojione.js"],
           "strophe.js": ["node_modules/strophe.js/strophe.js"]
        },
        "module": "commonjs",
        "outDir": "./dist",
        "target": "es5",
        "lib": ["DOM", "ES2015", "ES2015.Promise", "ES5", "ScriptHost"]
    },
    "include": [
        "./src/**/*.ts",
        "./template/*.hbs",
        "./*.d.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
       "node_modules",
       "typings"
    ],
    "files": [
      "custom.d.ts"
   ]
}
